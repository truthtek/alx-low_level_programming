#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define BUFFER_SIZE 10

/**
 * main - Brute force password guessing.
 *
 * This program attempts to generate all possible combinations
 * of lowercase letters, uppercase letters, and digits as the password.
 *
 * Return: 0 if the password is found, 1 if not found.
 */

int main() {
char buffer[BUFFER_SIZE];
memset(buffer, 'a', BUFFER_SIZE);
for (int i = 0; i < 1000000; i++)
{
if (strspn(buffer, "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789") == BUFFER_SIZE)
{
printf("Password: %s\n", buffer);
return (0);
}
buffer[i % BUFFER_SIZE]++;
}
printf("Password not found\n");
return (1);
}
