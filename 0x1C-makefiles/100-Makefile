# Makefile for school project

# The name of the executable
NAME = school

# Compiler to be used
CC = gcc

# Compiler flags
CFLAGS = -Wall -Werror -Wextra -pedantic

# Source files
SRC = main.c school.c

# Object files
OBJ = $(SRC:.c=.o)

# Default rule
all: $(OBJ)
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

# Compile the source files into object files
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean up Emacs and Vim temporary files, the executable, and the object files
clean:
	@rm -f *~ $(NAME) $(OBJ)

# Delete the object files
oclean:
	@rm -f $(OBJ)

# Delete all Emacs and Vim temporary files, the executable, and the object files
fclean: clean oclean

# Forces recompilation of all source files
re: fclean all

# Check for the presence of m.h
$(OBJ): m.h
